<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000" >
<LinearLayout
    android:id="@+id/settingLayout"
    android:layout_marginTop="10dp"
    
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
 
         >
         <LinearLayout
    android:id="@+id/settingtextlayout"
      android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
 
         >
     <TextView
         android:id="@+id/cardpermoney"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="2"
                android:textSize = "16sp"   
         android:textColor="#fff"
         android:text="$/card: 1" />
      <TextView
         android:id="@+id/rulestext"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="2"
                android:textSize = "16sp"   
         android:textColor="#fff"
         android:text="No rules" />
</LinearLayout>
      <Button
          android:id="@+id/setting"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginRight="10dp"
          android:background="@drawable/setting" />

    </LinearLayout>
   <LinearLayout
       android:id="@+id/linearLayout"
            android:layout_below="@+id/settingLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true"
       android:layout_marginTop="50dp"
       android:gravity="center"
       android:orientation="horizontal" >

       <TextView
           android:id="@+id/player"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:text="Player: "
           android:textColor="#fff"
           android:textSize="10sp" />

       <TextView
           android:id="@+id/player1"
           android:layout_width="66dp"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:text="player1"
           android:textColor="#fff"
           android:textSize="16sp" />

       <TextView
           android:id="@+id/player2"
           android:layout_width="66dp"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:text="player2"
           android:textColor="#fff"
           android:textSize="16sp" />

       <TextView
           android:id="@+id/player3"
           android:layout_width="66dp"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:text="player3"
           android:textColor="#fff"
           android:textSize="16sp" />

       <TextView
           android:id="@+id/player4"
           android:layout_width="66dp"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:text="player4"
           android:textColor="#fff"
           android:textSize="16sp" />
   </LinearLayout>

 <ListView
     android:id="@+id/listView"
     android:layout_below="@+id/linearLayout"
     android:layout_width="fill_parent"
     android:layout_height="300dp"
     android:layout_alignParentLeft="true"
     android:cacheColorHint="#00000000" >
 </ListView>
 <LinearLayout
       android:id="@+id/linearLayout2"
       android:layout_below="@+id/listView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       
       android:gravity="center"
       android:orientation="horizontal" >

       <TextView
           android:id="@+id/player"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:text="Result: "
           android:textColor="#fff"
           android:textSize="10sp" />

       <TextView
           android:id="@+id/totalplayer1"
           android:layout_width="66dp"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:text="0"
           android:textColor="#fff"
           android:textSize="16sp" />

       <TextView
           android:id="@+id/totalplayer2"
           android:layout_width="66dp"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:text="0"
           android:textColor="#fff"
           android:textSize="16sp" />

       <TextView
           android:id="@+id/totalplayer3"
           android:layout_width="66dp"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:text="0"
           android:textColor="#fff"
           android:textSize="16sp" />

       <TextView
           android:id="@+id/totalplayer4"
           android:layout_width="66dp"
           android:layout_height="wrap_content"
           android:layout_weight="2"
           android:text="0"
           android:textColor="#fff"
           android:textSize="16sp" />
   </LinearLayout>
 <Button
     android:id="@+id/enter"
      android:layout_below="@+id/linearLayout2"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_alignParentLeft="true"
     android:layout_marginLeft="58dp"
     android:text="INSERT" />

</RelativeLayout>